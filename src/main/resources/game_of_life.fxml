<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="csc22100.assignment4.ui.GameOfLifeController">
    <MenuBar>
        <Menu text="File">
            <MenuItem fx:id="quitItem" text="Quit" />
        </Menu>
    </MenuBar>
    <ToolBar>
        <Button fx:id="startButton" mnemonicParsing="false" text="Start" />
        <Button fx:id="stopButton" mnemonicParsing="false" text="Stop" />
        <Button fx:id="stepButton" mnemonicParsing="false" text="Step" />
        <Button fx:id="resetButton" mnemonicParsing="false" text="Reset" />
        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Speed" />
        <Slider fx:id="slider" blockIncrement="1.0" majorTickUnit="1.0" max="10.0" min="1.0" minorTickCount="0" showTickLabels="true" showTickMarks="true" snapToTicks="true" />
    </ToolBar>
   <HBox prefHeight="100.0" prefWidth="200.0" VBox.vgrow="SOMETIMES">
      <children>
          <GridPane fx:id="gridPane" alignment="CENTER" gridLinesVisible="true" minHeight="-Infinity" minWidth="-Infinity" HBox.hgrow="ALWAYS" />
      </children>
      <padding>
         <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      </padding>
   </HBox>
</VBox>
