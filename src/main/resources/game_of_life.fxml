<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="csc22100.assignment4.ui.GameOfLifeController">
    <MenuBar>
        <Menu text="File">
            <MenuItem text="Quit" fx:id="quitItem" />
        </Menu>
    </MenuBar>
    <ToolBar>
        <Button mnemonicParsing="false" text="Start" fx:id="startButton"/>
        <Button mnemonicParsing="false" text="Stop" fx:id="stopButton"/>
        <Button mnemonicParsing="false" text="Step" fx:id="stepButton"/>
        <Button mnemonicParsing="false" text="Reset" fx:id="resetButton"/>
        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Speed"/>
        <Slider blockIncrement="1.0" majorTickUnit="1.0" max="10.0" min="1.0" minorTickCount="0" showTickLabels="true"
                showTickMarks="true" snapToTicks="true"/>
    </ToolBar>
   <GridPane gridLinesVisible="true" fx:id="gridPane">
     <columnConstraints>
       <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
       <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
     </columnConstraints>
     <rowConstraints>
       <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
       <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
       <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
     </rowConstraints>
   </GridPane>
</VBox>
